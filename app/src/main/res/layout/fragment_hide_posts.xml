<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_mainHidePost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.feed.view.SavedPostsFragment">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <include layout="@layout/common_recyclerview" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_unhidePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/image_square"
        android:drawableStart="@drawable/post_view_icon_unselected"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableTint="@color/black"
        android:fontFamily="@font/brandon_reg"
        android:padding="@dimen/_15sdp"
        android:text="@string/unhide_this_post"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:visibility="gone" />

</LinearLayout>