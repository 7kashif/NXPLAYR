<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#EC5848"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/edit_icon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/edit_icon_profile" />

                <ImageView
                    android:id="@+id/delete_icon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/popup_delete_icon" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mainWorkExp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/img_employement"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5sdp"
                        app:actualImageResource="@drawable/work_icon_selected"
                        app:actualImageScaleType="fitXY"
                        app:placeholderImage="@drawable/work_icon_selected"
                        app:placeholderImageScaleType="fitXY"
                        app:roundAsCircle="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_graphics_designer"
                            style="@style/Font.SubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/white" />

                        <TextView
                            android:id="@+id/tv_company_name"
                            style="@style/Font.SubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_14ssp" />


                        <!--<TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/coach_fifa_club"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/white"                    android:fontFamily="@font/brandon_reg"
                                                                                android:id="@+id/tv_current_location"
                            />-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_date"
                                style="@style/Font.SubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_12ssp"

                                />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:background="@color/colorPrimaryDark" />


                            <TextView
                                android:id="@+id/tv_currentWork_location"
                                style="@style/Font.SubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/_12ssp" />


                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/delete_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/more_icon"
                        android:visibility="gone" />
                </LinearLayout>

                <com.google.android.material.internal.BaselineLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/baseLineGray">

                </com.google.android.material.internal.BaselineLayout>


            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>