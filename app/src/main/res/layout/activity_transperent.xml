<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fsl_semi_transparent_dark_appbg_480px"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_select_Camera"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/camera_icon_unselected_popup" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_camera"
            style="@style/Font.SubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/camera" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_select_Gallery"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/gallery_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_gallery"
            style="@style/Font.SubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/brandon_reg"
            android:gravity="center"
            android:text="@string/gallery" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCloseSelection"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_below="@+id/tv_gallery"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/brandon_reg"
            android:gravity="center"
            android:text="@string/close"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_18ssp"
            />

   <!--     <com.google.android.material.button.MaterialButton
