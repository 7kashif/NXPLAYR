<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.filterfeed.view.HomeFilterActivity">

    <LinearLayout
        android:id="@+id/ll_main_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_posttype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/filter_bg"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/tvFilterTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start"
                    android:padding="@dimen/_10sdp"
                    android:text="Post Type"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/plus_icon_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sub_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioGroup
                    android:id="@+id/radiogroupPostType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:visibility="visible">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ratingPostTypeRB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:drawablePadding="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="All"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"

                        />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ratingPostTypeRB1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:drawablePadding="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Photo"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"

                        />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ratingPostTypeRB2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:drawablePadding="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Video"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"

                        />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ratingPostTypeRB3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:drawablePadding="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Document"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"

                        />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ratingPostTypeRB4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:drawablePadding="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Link"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"

                        />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_Publication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/filter_bg"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvFilterTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start"
                    android:padding="@dimen/_10sdp"
                    android:text="Publication Time"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/plus_icon_white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sub_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioGroup
                    android:id="@+id/radiogroupPublication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:visibility="visible">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ratingPublicationRB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:drawablePadding="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Anytime"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"

                        />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ratingPublicationRB1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:drawablePadding="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Today"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"

                        />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ratingPublicationRB2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:drawablePadding="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="This Week"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"

                        />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ratingPublicationRB3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:drawablePadding="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="This Month"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"

                        />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_PostedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/filter_bg"
                android:orientation="horizontal">

                 <TextView
                    android:id="@+id/tvFilterTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start"
                    android:padding="@dimen/_10sdp"
                    android:text="Posted By"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/plus_icon_white" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sub_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioGroup
                    android:id="@+id/radiogroupPostedBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:visibility="visible">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ratingPostedByRB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:drawablePadding="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Male"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"

                        />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/ratingPostedByRB1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:drawablePadding="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Female"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"

                        />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_Sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/filter_bg"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvFilterTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start"
                    android:padding="@dimen/_10sdp"
                    android:text="Sort By"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/plus_icon_white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sub_item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/ratingSortRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:button="@null"
                    android:drawableEnd="@android:drawable/btn_radio"
                    android:drawablePadding="@dimen/_30sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Anytime"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:visibility="visible"

                    />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/ratingSortRB1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:button="@null"
                    android:drawableEnd="@android:drawable/btn_radio"
                    android:drawablePadding="@dimen/_30sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Today"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:visibility="visible"

                    />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/ratingSortRB2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:button="@null"
                    android:drawableEnd="@android:drawable/btn_radio"
                    android:drawablePadding="@dimen/_30sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="This Week"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:visibility="visible"

                    />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/ratingSortRB3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:button="@null"
                    android:drawableEnd="@android:drawable/btn_radio"
                    android:drawablePadding="@dimen/_30sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="This Month"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:visibility="visible"

                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lylUnSelectApply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/brandon_reg"
            android:text="Apply"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_16ssp" />
    </LinearLayout>


</RelativeLayout>