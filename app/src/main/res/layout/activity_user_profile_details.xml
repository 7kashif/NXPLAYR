<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_mainUpdateprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg"
    android:orientation="vertical"
    tools:context=".UserProfileDetailsActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_basicDetails"
            layout="@layout/fragment_basic_detail"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_footballAgeCategory"
            layout="@layout/fragment_football_age_catogary"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_heigntWeight"
            layout="@layout/fragment_height_weight"
            android:visibility="gone" />


        <include
            android:id="@+id/layout_footballLevel"
            layout="@layout/fragment_football_level"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_bestFootPrint"
            layout="@layout/fragment_best_foot_print"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_nameandBio"
            layout="@layout/fragment_name_bio"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>