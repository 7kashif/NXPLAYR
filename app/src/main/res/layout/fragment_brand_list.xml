<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.BrandListFragment">


    <include layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <EditText
            android:id="@+id/search_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/round_corner_box"
            android:backgroundTint="@color/transperent"
            android:drawableRight="@drawable/search_place_create_post"
            android:fontFamily="@font/brandon_reg"
            android:hint="@string/search"
            android:singleLine="true"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/gray_text_color"
            android:textColorHint="@color/gray_text_color" />

        <include layout="@layout/common_recyclerview" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_discard"
            style="@style/Widget.Fusion.Button.Accent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/brandon_reg"
            android:gravity="center"
            android:singleLine="true"
            android:text="Discard"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:cornerRadius="5dp"
            app:strokeColor="@color/colorAccent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply"
            style="@style/Widget.Fusion.Button.Yellow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/brandon_reg"
            android:gravity="center"
            android:singleLine="true"
            android:text="Apply"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            app:cornerRadius="5dp"
            app:strokeColor="@color/colorAccent" />


    </LinearLayout>

</LinearLayout>