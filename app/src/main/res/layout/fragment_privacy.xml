<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_mainPrivacy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.setting.view.PrivacyFragment">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/set_ur_privacy"
            style="@style/Font.SubTitle_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text2"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_15sdp"
            android:text="@string/set_your_privacy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/allow_ppl_follow_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/brandon_reg"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/allow_people_to_follow_me"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_peopleFollowMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@drawable/custom_notificationbutton"
                    android:padding="@dimen/_5sdp"
                    android:thumb="@null"
                    app:track="@null" />

            </LinearLayout>

            <com.google.android.material.internal.BaselineLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/baseLineGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/allow_connect_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/brandon_reg"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/allow_connect_request"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_allowConnectRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@drawable/custom_notificationbutton"
                    android:padding="@dimen/_5sdp"
                    android:thumb="@null"
                    app:track="@null" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>