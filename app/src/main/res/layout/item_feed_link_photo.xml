<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/linkImageview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            app:actualImageScaleType="none"
            app:placeholderImage="@drawable/image_placeholder"
            app:placeholderImageScaleType="fitXY"
            app:roundingBorderColor="@color/white"
            app:roundingBorderWidth="0.5dp" />
        <TextView
            android:id="@+id/linktext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/transparentlayer"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/white"
            tools:textSize="@dimen/_12ssp"
            android:visibility="visible"
            tools:text="sdgsjfgbksdbgksbgksbgvs" />

    </FrameLayout>
</RelativeLayout>