<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_nationteam"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.usertrophyhonors.view.TrophyHonorsFragment">

    <include layout="@layout/toolbar2" />

    <include layout="@layout/line_seperator" />

    <TextView
        android:id="@+id/caption"
        style="@style/Font.SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:fontFamily="@font/brandon_reg"
        android:textSize="@dimen/_18ssp"
        android:visibility="visible"
        tools:text="Data here" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/background_boderless_curve">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_trophyHonors"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/colorPrimaryDark"
            android:breakStrategy="balanced"
            android:fitsSystemWindows="true"
            android:gravity="top"
            android:hint="@string/write_text"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:padding="@dimen/_10sdp"
            android:singleLine="false"
            android:textColor="@color/white"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/_16ssp"
            android:theme="@style/MyEditTextTheme" />
    </LinearLayout>

    <com.chand.progressbutton.ProgressButton
        android:id="@+id/btnUpdateBasicDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center|bottom"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:p_arrowVisible="false"
        app:p_backgroundTint="@color/colorPrimary"
        app:p_cornerRadius="@dimen/_3sdp"
        app:p_fontFamily="brandon_reg"
        app:p_progressColor="@color/colorPrimary"
        app:p_strokeColor="@color/colorPrimary"
        app:p_strokeWidth="@dimen/_1sdp"
        app:p_style="progressBar"
        app:p_text="@string/save"
        app:p_textColor="@color/text_primary"
        app:p_textSize="@dimen/_18ssp" />

</LinearLayout>