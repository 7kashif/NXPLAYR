<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frv_rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg"
    android:orientation="vertical">

    <include layout="@layout/toolbar1" />

    <include layout="@layout/line_seperator" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/frv_nl_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar1"
                android:overScrollMode="never"
                android:visibility="visible">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/frv_text_title"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/apply_for_instagram_verifiction"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/frv_text_desc"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/brandon_reg"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/apply_for_instagram_verifiction_desc"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fev_input_first_name"
                        style="@style/MyEditTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:backgroundTint="@color/transperent"
                        android:hint="@string/first_name"
                        android:textColorHint="@color/colorPrimary"
                        android:theme="@style/MyEditTextTheme"
                        app:errorEnabled="false"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large.Inverse">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fev_edit_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@#$%?()._-+=!-"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingTop="@dimen/_35sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/_16ssp"
                            android:theme="@style/MyEditTextTheme" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fev_input_last_name"
                        style="@style/MyEditTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:backgroundTint="@color/transperent"
                        android:hint="@string/last_name"
                        android:textColorHint="@color/colorPrimary"
                        android:theme="@style/MyEditTextTheme"
                        app:errorEnabled="false"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large.Inverse">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fev_edit_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@#$%?()._-+=!-"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingTop="@dimen/_35sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/_16ssp"
                            android:theme="@style/MyEditTextTheme" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fev_input_known_as"
                        style="@style/MyEditTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:backgroundTint="@color/transperent"
                        android:hint="@string/known_as"
                        android:textColorHint="@color/colorPrimary"
                        android:theme="@style/MyEditTextTheme"
                        app:errorEnabled="false"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large.Inverse">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fev_edit_known_as"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@#$%?()._-+=!-"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingTop="@dimen/_35sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/_16ssp"
                            android:theme="@style/MyEditTextTheme" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fev_input_category"
                        style="@style/MyEditTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:backgroundTint="@color/transperent"
                        android:hint="@string/category"
                        android:textColorHint="@color/colorPrimary"
                        android:theme="@style/MyEditTextTheme"
                        app:errorEnabled="false"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large.Inverse">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fev_edit_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@#$%?()._-+=!-"
                            android:drawableEnd="@drawable/drop_down_arrow_public"
                            android:drawableTint="@color/colorPrimary"
                            android:editable="false"
                            android:focusable="false"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:paddingTop="@dimen/_35sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/_16ssp"
                            android:theme="@style/MyEditTextTheme" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/frv_text_attach_image"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/please_attach_a_photo_of_your_id"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/frv_text_choose_image"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/brandon_reg"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/choose_file"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_14ssp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/description"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/brandon_reg"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/apply_for_instagram_verifiction_desc_second"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/frv_btn_send"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/rounded_edittext"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/send_"
                            style="@style/Font.SubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="@string/send"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.core.widget.NestedScrollView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/frv_ll_requested_submitted"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar1"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/verification_requested_submitted"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_28sdp"
                    android:layout_marginEnd="@dimen/_28sdp"
                    android:fontFamily="@font/brandon_reg"
                    android:gravity="center"
                    android:text="@string/verification_requested_submitted_desc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>

        <include
            android:id="@+id/camera_layout_mediaFile"
            layout="@layout/layout_select_dialog_camera"
            android:visibility="gone" />
    </FrameLayout>
</androidx.appcompat.widget.LinearLayoutCompat>