<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <com.chand.progressbutton.ProgressButton
            android:id="@+id/btn_purchase_price"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:p_arrowVisible="false"
            app:p_backgroundTint="@color/btn_purchase"
            app:p_cornerRadius="@dimen/_3sdp"
            app:p_fontFamily="brandon_reg"
            app:p_progressColor="@color/btn_purchase"
            app:p_strokeColor="@color/btn_purchase"
            app:p_strokeWidth="@dimen/_1sdp"
            app:p_style="progressBar"
            app:p_text="100 GB"
            app:p_textColor="@color/white"
            app:p_textSize="@dimen/_14ssp" />

        <TextView
            style="@style/Font.SubTitle_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_10ssp"
            android:text="$3.69 per month"
            android:id="@+id/txt_purchase_price"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tick_success"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_gravity="center"
            android:src="@drawable/post_tick"   />

    </LinearLayout>


</LinearLayout>