<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_image_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_profile"
                style="@style/Font.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:textSize="@dimen/_25ssp"
                android:text="@string/let_s_build_your_profile" />

            <TextView
                android:id="@+id/tv_profile_details"
                style="@style/Font.SubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/building_real_connections_between_real_people_please_add_one_photo_of_yourself"
                android:textSize="@dimen/_16ssp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_40sdp">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_user_profile"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    app:roundAsCircle="true"
                    app:roundingBorderWidth="@dimen/_1sdp"
                    app:roundingBorderColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    app:actualImageResource="@drawable/profile_pic_placeholder"
                    app:placeholderImage="@drawable/profile_pic_placeholder"
                    android:backgroundTint="@color/colorPrimary"
                    app:placeholderImageScaleType="fitXY" />


                <ImageView
                    android:id="@+id/image_camera_icon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="top|end"
                    android:src="@drawable/camera_icon_selected"
                    android:layout_marginTop="@dimen/_20sdp"

                    />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.chand.progressbutton.ProgressButton
                android:id="@+id/btnNextUserProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:p_arrowVisible="false"
                app:p_backgroundTint="@android:color/transparent"
                app:p_cornerRadius="@dimen/_3sdp"
                app:p_fontFamily="brandon_reg"
                app:p_progressColor="@color/colorPrimary"
                app:p_strokeColor="@color/grayborder"
                app:p_strokeWidth="@dimen/_1sdp"
                app:p_style="progressBar"
                app:p_text="@string/next"
                app:p_textColor="@color/colorPrimary"
                app:p_textSize="@dimen/_18ssp"

                />


        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>