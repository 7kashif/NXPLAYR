<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="start|top"
                    android:padding="@dimen/_5sdp"
                    app:actualImageResource="@drawable/profile_pic_placeholder"
                    app:placeholderImage="@drawable/profile_pic_placeholder"
                    fresco:actualImageScaleType="fitXY"
                    fresco:placeholderImageScaleType="fitXY"
                    fresco:roundedCornerRadius="@dimen/_3sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_details"
                            style="@style/Font.SubTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
android:padding="@dimen/_5sdp"
                            android:singleLine="false"
                            android:layout_weight="1" android:hint="@string/hassan_sr_khan_lorem_ipsum_is_simply_dummy_text_of_the_printing_and_has_been_the_industrys_standard_printing_and_type_see_more"


                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_12ssp" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|right"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:src="@drawable/follow_icon" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <com.google.android.material.internal.BaselineLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black">

            </com.google.android.material.internal.BaselineLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center" android:src="@drawable/profile_top_menu_icon2_unselected"

                    />

                <TextView
                    style="@style/Font.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:hint="10"
                    android:textSize="@dimen/_14ssp"
                    android:padding="@dimen/_2sdp"
                    android:textColorHint="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:src="@drawable/more_icon" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/round_corner_box"
                android:backgroundTint="@color/black"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="start|center"
                    android:padding="@dimen/_5sdp"
                    app:actualImageResource="@drawable/profile_pic_placeholder"
                    app:placeholderImage="@drawable/profile_pic_placeholder"
                    fresco:actualImageScaleType="fitXY"
                    fresco:placeholderImageScaleType="fitXY"
                    fresco:roundedCornerRadius="@dimen/_3sdp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/brandon_reg"
                    android:hint="@string/write_a_comment"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="end|center"
                    android:padding="@dimen/_5sdp"
                    app:actualImageResource="@drawable/profile_pic_placeholder"
                    app:placeholderImage="@drawable/profile_pic_placeholder"
                    fresco:actualImageScaleType="fitXY"
                    fresco:placeholderImageScaleType="fitXY"
                    fresco:roundedCornerRadius="@dimen/_3sdp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>