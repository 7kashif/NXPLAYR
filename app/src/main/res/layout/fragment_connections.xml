<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.userconnection.view.ConnectionsFragment">

    <include layout="@layout/toolbar2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_connection"
            style="@style/MyCustomTabText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_underline_selector_gray"
            android:backgroundTint="@color/grayborder1"
            app:tabIconTint="@color/white"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabMode="fixed"
            app:tabPadding="0dp"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextAppearance="@style/MyCustomTabText"
            app:tabTextColor="@color/white">

        </com.google.android.material.tabs.TabLayout>


    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_connection"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>


</LinearLayout>