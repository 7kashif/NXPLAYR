<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_mainNotificationList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".ui.activity.post.view.PrivacyActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rgGroup_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButton_public_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checked="false"
                android:layoutDirection="ltr"
                android:text="@string/Public"
                android:textColor="@color/colorPrimary"
                android:textDirection="ltr"
                app:useMaterialThemeColors="true"
                android:drawableEnd="@drawable/radio_dot_selected"
                android:button="@null"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_16ssp" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButton_connection_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checked="false"
                android:layoutDirection="ltr"
                android:text="@string/connections"
                android:textColor="@color/colorPrimary"
                android:textDirection="ltr"
                app:useMaterialThemeColors="true"
                android:drawableEnd="@drawable/radio_dot_selected"
                android:button="@null"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_16ssp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_15sdp"
                android:id="@+id/ll_sub_privacy"
                android:visibility="gone"
                android:orientation="vertical"/>
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButton_groups_public_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checked="false"
                android:layoutDirection="ltr"
                android:text="@string/groups"
                android:textColor="@color/colorPrimary"
                android:textDirection="ltr"
                app:useMaterialThemeColors="true"
                android:drawableEnd="@drawable/radio_dot_selected"
                android:button="@null"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_16ssp"/>

        </RadioGroup>


    </LinearLayout>

</LinearLayout>