<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:weightSum="1"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:padding="@dimen/_2sdp">

        <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/useruploadImageview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
            app:actualImageScaleType="fitXY"
            app:placeholderImageScaleType="fitXY"
            app:placeholderImage="@drawable/bg"
        />

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="@dimen/_2sdp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/useruploadImageview_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                app:actualImageScaleType="fitXY"
                app:placeholderImageScaleType="fitXY"
                app:placeholderImage="@drawable/bg"

 />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:weightSum="1"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:padding="@dimen/_2sdp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/useruploadImageview_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            app:actualImageScaleType="fitXY"
            app:placeholderImageScaleType="fitXY"
            app:placeholderImage="@drawable/bg"
            />


    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="@dimen/_2sdp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/useruploadImageview_four"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                app:actualImageScaleType="fitXY"
                app:placeholderImageScaleType="fitXY"
                app:placeholderImage="@drawable/bg"
                 />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:id="@+id/tvCount"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:background="@color/transparentlayer"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>