<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    style="@style/Widget.Fusion.Toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp"
    android:background="@android:color/transparent"
    android:elevation="@dimen/_1ssp"
    android:gravity="center"
    android:padding="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
    app:navigationIcon="@drawable/back_arrow_signup"
    app:titleMarginStart="@dimen/_5ssp"
    app:titleTextColor="@color/white">


    <TextView
        android:id="@+id/tvToolbarTitle"
        style="@style/Font.SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/brandon_reg"
        android:textSize="@dimen/_18ssp"
        android:visibility="visible"
        tools:text="Header" />

    <TextView
        android:id="@+id/tv_post"
        style="@style/Font.SubTitle_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:drawableStart="@drawable/tick_black"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableTint="@color/colorPrimary"
        android:gravity="right"
        android:text="Post"
        android:visibility="gone" />

    <TextView
        android:id="@+id/menuToolbarItem"
        style="@style/Font.SubTitle_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_10ssp"
        android:drawableStart="@drawable/tick_black"
        android:drawablePadding="@dimen/_3ssp"
        android:drawableTint="@color/colorPrimary"
        android:gravity="right"
        android:text="Post"
        android:padding="@dimen/_5sdp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/menuToolbarItemsend"
        style="@style/Font.SubTitle_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_10ssp"
        android:drawableStart="@drawable/post_tick"
        android:drawablePadding="@dimen/_3ssp"
        android:drawableTint="@color/colorPrimary"
        android:gravity="right"
        android:text="@string/send"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/menuToolbarInvite"
        style="@style/Font.SubTitle_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_10ssp"
        android:background="@drawable/rounded_edittext_primary"
        android:gravity="center"
        android:paddingLeft="@dimen/_10ssp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingRight="@dimen/_10ssp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="Invite"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="?selectableItemBackground"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/edit_icon_navigation"
        android:visibility="gone"
        tools:visibility="visible"


        />


